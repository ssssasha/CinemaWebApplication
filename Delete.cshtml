@model CinemaWebApplication.Ticket

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Білет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieShow)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieShow.DateAndTime)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seat.RowNumber)
